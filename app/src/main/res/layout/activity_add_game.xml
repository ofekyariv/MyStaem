<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorbackground"
    tools:context=".AddGame">


    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="ADD A NEW GAME"
        android:layout_marginTop="12dp"
        android:textSize="40dp"
        android:textColor="@color/colorbuttonAccent"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="16dp"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/roundbackground"
    android:orientation="vertical">

    <EditText
        android:id="@+id/addgamename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:textColorHint="@color/White"
        android:inputType="textPersonName"
        android:hint="Name of the Game" />

    <EditText
        android:id="@+id/addkind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:textColorHint="@color/White"
        android:inputType="textPersonName"
        android:hint="kind of Game" />

    <EditText
        android:id="@+id/addprice"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="@color/White"
        android:inputType="textPersonName"
        android:hint="Game price"/>


    <EditText
        android:id="@+id/addgamepic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:textColorHint="@color/White"
        android:inputType="textPersonName"
        android:hint="URL for Game icon" />


</LinearLayout>


   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:layout_gravity="center_horizontal">


       <Button
           android:id="@+id/submit"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="12dp"
            android:layout_marginRight="24dp"
           android:background="@drawable/roundbutton"
           android:padding="8dp"
           android:textSize="12dp"
           android:textColor="@color/White"
           android:text="submit" />


       <Button
           android:id="@+id/btnback"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="12dp"
            android:layout_marginLeft="24dp"
           android:background="@drawable/roundbutton"
           android:padding="8dp"
           android:textSize="12dp"
           android:textColor="@color/White"
           android:text="go back" />
   </LinearLayout>







</LinearLayout>
